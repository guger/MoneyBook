<resources>

    <declare-styleable name="MonthlyTrendChart">
        <attr name="barColor" format="color" />
        <attr name="curveBorderColor" format="color" />
        <attr name="curveFillColor" format="color" />
        <attr name="limit" format="float" />
        <attr name="limitText" format="string" />
    </declare-styleable>

    <declare-styleable name="StrokePieChart">
        <attr name="defaultColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="roundedEdges" format="boolean" />
        <attr name="distance" format="float" />
        <attr name="text" format="string" />
        <attr name="fontResId" format="integer" />
        <attr name="bold" format="boolean" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ScrollableTab">
        <attr name="selectedColor" format="color" />
        <attr name="unSelectedColor" format="color" />
        <attr name="tabTextAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="VerticalProgressBar">
        <attr name="progress" format="float" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="VisualizeDividerView">
        <attr name="colors" format="reference" />
        <attr name="distributions" format="reference" />
    </declare-styleable>
</resources>